{
  "name": "viza",
  "displayName": "Viza Commit Helper",
  "description": "Generates commit messages and copies to clipboard",
  "version": "0.0.5",
   "icon": "images/icon.png", 
  "publisher": "VisaDev",
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vizakan10/Auto_commit_msgVSCODE-EXT.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:viza.generateCommit"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "viza.generateCommit",
        "title": "Generate Commit Message"
      }
    ],
    "keybindings": [
      {
        "command": "viza.generateCommit",
        "key": "ctrl+alt+h",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "viza.generateCommit",
          "when": "editorTextFocus",
          "group": "z_end"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
