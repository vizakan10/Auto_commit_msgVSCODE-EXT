{
  "name": "viza",
  "displayName": "Viza Commit Helper",
  "description": "Generates commit messages and copies to clipboard",
  "version": "0.0.5",
  "icon": "images/icon.png",
  "publisher": "VisaDev",
  "license": "MIT",
  "engines": {
    "vscode": "^1.103.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vizakan10/Auto_commit_msgVSCODE-EXT.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:viza.generateCommit",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "viza.generateCommit",
        "title": "Generate Commit Message"
      },
      {
        "command": "viza.gitStatus",
        "title": "Git Status"
      },
      {
        "command": "viza.gitInit",
        "title": "Git Init"
      }
    ],
    "keybindings": [
      {
        "command": "viza.generateCommit",
        
        "key": "ctrl+alt+h",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "viza.generateCommit",
          "when": "editorTextFocus",
          "group": "z_end"
        },
        {
          "command": "viza.gitStatus",
          "when": "editorTextFocus",
          "group": "z_end"
        },
        {
          "command": "viza.gitInit",
          "when": "editorTextFocus",
          "group": "z_end"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
